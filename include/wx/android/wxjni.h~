#ifndef _WX_JNI_H_
#define _WX_JNI_H_

#include <jni.h>
#include <stack>

#include <stdio.h>
#include <string.h>

#include <wx/app.h>

#include <android/log.h>

#ifdef __cplusplus
extern "C" {
#endif

#define ABI "armeabi"

#define LOGI(...) ((void)__android_log_print(ANDROID_LOG_INFO, "native-activity", __VA_ARGS__))
#define LOGW(...) ((void)__android_log_print(ANDROID_LOG_WARN, "native-activity", __VA_ARGS__))

JNIEXPORT jint JNICALL
load(JavaVM* vm, void* reserved);

JNIEXPORT jint JNICALL
Java_org_wxwidgets_MainActivity_wxStart( JNIEnv* env,
													  jobject thiz);

JNIEXPORT void JNICALL
Java_org_wxwidgets_MainActivity_handleEvent( JNIEnv* env, jobject thiz,
						jint code, jobject obj);

JNIEXPORT void JNICALL
Java_org_wxwidgets_MainActivity_onCreateOMenu( JNIEnv* env,jobject thiz,
													  jobject obj);

#define IMPLEMENT_ANDROID_APP_2(appname) \
		JNIEXPORT jint JNICALL JNI_OnLoad(JavaVM* vm, void* reserved) { 		\
		ImplementApp(new appname); \
		return load(vm, reserved); }

#ifdef __cplusplus
}
#endif // __cplusplus
#endif // _WX_JNI_H_
