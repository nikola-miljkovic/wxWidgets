#ifndef _WX_ANDROID_REGION_H_
#define _WX_ANDROID_REGION_H_

// ----------------------------------------------------------------------------
// wxRegion
// ----------------------------------------------------------------------------

class WXDLLIMPEXP_CORE wxRegion : public wxRegionBase
{
public:
    wxRegion() { }
    wxRegion(wxCoord x, wxCoord y, wxCoord w, wxCoord h) { }
    wxRegion(const wxPoint& topLeft, const wxPoint& bottomRight) { }
    wxRegion(const wxRect& rect) { }
    wxRegion(size_t n, const wxPoint *points, wxPolygonFillMode fillStyle = wxODDEVEN_RULE) { }
    wxRegion(const wxBitmap& bmp) { }
    wxRegion(const wxBitmap& bmp, const wxColour& transp, int tolerance = 0) { }

    virtual ~wxRegion();
    
    // wxRegionBase methods
    virtual void Clear() {}; 
    virtual bool IsEmpty() const { return false; };

protected: 
    virtual wxGDIRefData *CreateGDIRefData() const { return NULL; };
    virtual wxGDIRefData *CloneGDIRefData(const wxGDIRefData *data) const { return NULL; };

   // wxRegionBase pure virtuals
    virtual bool DoIsEqual(const wxRegion& region) const { return false; };
    virtual bool DoGetBox(wxCoord& x, wxCoord& y, wxCoord& w, wxCoord& h) const { return false; };
    virtual wxRegionContain DoContainsPoint(wxCoord x, wxCoord y) const { return NULL; };
    virtual wxRegionContain DoContainsRect(const wxRect& rect) const { return NULL; };

    virtual bool DoOffset(wxCoord x, wxCoord y) { return false; };
    virtual bool DoUnionWithRect(const wxRect& rect) { return false; };
    virtual bool DoUnionWithRegion(const wxRegion& region) { return false; };
    virtual bool DoIntersect(const wxRegion& region) { return false; };
    virtual bool DoSubtract(const wxRegion& region) { return false; };
    virtual bool DoXor(const wxRegion& region) { return false; };

private:
    void InitRect(wxCoord x, wxCoord y, wxCoord w, wxCoord h) { }

    DECLARE_DYNAMIC_CLASS(wxRegion)
};

#endif // _WX_ANDROID_REGION_H_
